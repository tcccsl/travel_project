{
	"pages": [
		{
			"path": "pages/Home/Home",
			"style": {
				"navigationBarTitleText": "Travel Diary",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/DiaryDetail/DiaryDetail",
			"style": {
				"navigationBarTitleText": "Diary Details",
				"navigationStyle": "custom"
			},
			"alias": "/diary-detail"
		},
		{
			"path": "pages/MyDiaries/MyDiaries",
			"style": {
				"navigationBarTitleText": "My Diaries",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/Publish/Publish",
			"style": {
				"navigationBarTitleText": "发布游记"
			}
		},
		{
			"path": "pages/Login/Login",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationStyle": "custom"
			},
			"alias": "/login"
		},
		{
			"path": "pages/Register/Register",
			"style": {
				"navigationBarTitleText": "注册",
				"navigationStyle": "custom"
			},
			"alias": "/register"
		},
		{
			"path": "pages/Admin/Admin",
			"style": {
				"navigationBarTitleText": "游记管理系统",
				"navigationStyle": "custom"
			},
			"alias": "/admin"
		},
		{
			"path": "pages/AdminLogin/AdminLogin",
			"style": {
				"navigationBarTitleText": "管理员登录",
				"navigationStyle": "custom"
			},
			"alias": "/admin-login"
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "Travel Diary",
		"navigationBarBackgroundColor": "#3B82F6",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3B82F6",
		"backgroundColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/Home/Home",
				"text": "Home",
				"iconPath": "static/icons/home.png",
				"selectedIconPath": "static/icons/home-active.png"
			},
			{
				"pagePath": "pages/MyDiaries/MyDiaries",
				"text": "My Diaries",
				"iconPath": "static/icons/diary.png",
				"selectedIconPath": "static/icons/diary-active.png"
			}
		]
	},
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	}
}
